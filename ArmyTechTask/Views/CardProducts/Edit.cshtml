@model CardProductDTO

@{
    ViewData["Title"] = "Edit";
}


 <div class="container my-auto">
        <div class="row">
          <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card z-index-0 fadeIn3 fadeInBottom">
              <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                  <h4 class="text-grey font-weight-bolder text-center mt-2 mb-0">Edit</h4>
                </div>
              </div>
              <div class="card-body">
                <form asp-action="Edit"  role="form" class="text-start">
                        <div class="text-danger" asp-validation-summary="All"></div>
                  <div class="input-group input-group-outline my-3">
                    <label class="form-label m-2" asp-for="ItemName"></label>
                    <input asp-for="ItemName" class="form-control">
                    <span asp-validation-for="ItemName"></span>
                  </div>
                  <div class="input-group input-group-outline my-3">
                    <label class="form-label m-2" asp-for="Price"></label>
                    <input asp-for="Price" class="form-control">
                    <span asp-validation-for="Price"></span>
                  </div>
                   <div class="input-group input-group-outline my-3">
                    <label class="form-label m-2" asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control">
                    <span asp-validation-for="Quantity"></span>
                  </div>
                  <div class="text-center">
                    <button type="submit" value="Edit" class="btn bg-info w-100 my-4 mb-2">Edit</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

